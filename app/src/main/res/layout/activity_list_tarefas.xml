<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="6dp"
    android:paddingStart="11dp"
    android:layout_marginTop="1dp">



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.firebaseapp.listTarefas">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginTop="444dp"
        android:clickable="true"
        android:visibility="visible"
        app:backgroundTint="@color/mdtp_dark_gray"
        app:elevation="@dimen/mdtp_time_picker_height"
        app:fabSize="normal"
        app:rippleColor="@color/mdtp_button_color"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="346dp" />

    <TableLayout
        android:layout_width="380dp"
        android:layout_height="654dp"
        tools:layout_editor_absoluteY="94dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Assunto: "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textViewAssunto"
                />


        </TableRow>


        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Data: "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textViewData"
                />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:text="Descrição: "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textViewDescricao"
                />

        </TableRow>

        <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Curso: "
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textViewCurso"
            />

    </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Matéria: "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textViewMateria"
                />


        </TableRow>



    </TableLayout>


</RelativeLayout>

</ScrollView>